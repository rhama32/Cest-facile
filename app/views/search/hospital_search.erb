<div class="container">
  <div class="row">
    <div class="col-2">
     <%= render 'public/hospital_search/search' %>
    </div>

<h4>病院検索結果</h4>
<table class="table table-hover table-inverse">
  <% if @range == "Hospital" %>
    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= "#{hospital.name}" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= hospital.comment %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>