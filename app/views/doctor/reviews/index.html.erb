<% if current_doctor.approved? %>
  <div class="row">
    <div class="col-xs-12">
      <h4 class="mt-3 text-center"><b>レビュー確認画面</b></h4>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="table-secondary">
            <th>病院・クリニック名</th>
            <th>レビュー投稿日</th>
            <th>診療の満足度</th>
            <th>院内の清潔さ</th>
            <th>スタッフの対応満足度</th>
            <th>待ち時間</th>
            <th>コメント</th>
            <th>総合満足度</th>
            <th>コメント確認</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.hospital.name %></td>
              <td><%= review.created_at.strftime("%Y年 %m月 %d日 %H:%M") %></td>
              <td><%= review.doctor_satisfaction %>/5点</td>
              <td><%= review.room_clean %>/5点</td>
              <td><%= review.staff_satisfaction %>/5点</td>
              <td><%= review.waiting_time %>分</td>
              <td><%= review.comment %></td>
              <td><%= review.total_point %>/5点</td>
              <td><%= link_to "リプライ" , doctor_review_replies_path(review), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="mt-2 pagination justify-content-center">
    <%= paginate @reviews %>
  </div>
<% else %>
  申請の承認をお待ちください。
<% end %>