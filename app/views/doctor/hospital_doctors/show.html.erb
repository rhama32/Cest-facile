<% if current_doctor.approved? %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-6">
        <h3 class="mt-3 text-center"><b><%= @doctor.name %>さんの<br>医療提供者マイページ</b></h3>
      </div>
        <h5><b>登録情報</b></h5>
        <div class="mt-3"><%= link_to "編集する", edit_doctor_hospital_doctor_path(@doctor), class:"btn btn-success" %></div>
          <table class="mt-3 table table-bordered table-hover">
            <tbody>
            <tr>
              <td class="table-secondary">氏名</td>
              <td><%= @doctor.name %></td>
            </tr>
            <tr>
              <td class="table-secondary">メールアドレス</td>
              <td><%= @doctor.email %></td>
            </tr>
            <tr>
              <td class="table-secondary">所属院名</td>
              <td><%= @hospital&.name %></td>
            </tr>
            <tr>
              <td class="table-secondary">会員ステータス</td>
              <td><% @doctor.approved_status %>
                  <% if @doctor.approved_status == 'approved' %><p class= "text-success" >承認</p>
                  <% elsif @doctor.approved_status == 'denied' %>承認却下
                  <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      <div class="d-flex justify-content-around">
        <%= link_to 'レビュー一覧', doctor_reviews_path, class: "btn btn-primary" %>
        <%= link_to 'フォロワー一覧', doctor_followers_path, class: "btn btn-success" %>
        <%= link_to '予約一覧', doctor_reservations_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
<% else %>
  申請の承認をお待ちください。
<% end %>