<h4>レビュー返信画面</h4>
<div class="row-lg-10">
<table class="table">
  <thead>
    <tr class="table-secondary">
      <th>病院・クリニック名</th>
      <th>レビュー投稿日</th>
      <th>診療の満足度</th>
      <th>院内の清潔さ</th>
      <th>スタッフの対応満足度</th>
      <th>待ち時間</th>
      <th>コメント</th>
      <th>総合満足度</th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @review, url: public_reviews_path do |f| %>
      <tr>
        <td><%= @review.hospital.name %></td>
        <td><%= @review.created_at.strftime("%Y年 %m月 %d日") %></td>
        <td><%= @review.doctor_satisfaction %></td>
        <td><%= @review.room_clean %></td>
        <td><%= @review.staff_satisfaction %></td>
        <td><%= @review.waiting_time %></td>
        <td><%= @review.comment %></td>
        <td><%= @review.total_point %></td>
      </tr>
   </tbody>
  </table>
      <div>会員コメント</div>
      <div><%= @review.comment %></div><br>
      <div>医師コメント</div>
      <div><%= f.text_field :comment %></div>
 
  <%= f.submit "返信する", class:"btn btn-success" %>
   <% end %>
</div>