<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h4 class="mt-3 text-center"><b>病院一覧</b></h4>
    </div>
    <div class="col-1">
      <h4>
        <%= link_to new_admin_hospital_path do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </h4>
    </div>
    <div class="row-sm-12">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>病院ID</th>
            <th>病院名</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th>削除ボタン</th>
          </tr>
        </thead>
        <tbody>
          <% @hospitals.each do |hospital| %>
            <tr>
              <th><%= hospital.id %></th>
              <th><%= link_to admin_hospital_path(hospital.id) do %>
                    <%= hospital.name %>
                  <% end %>
              </th>
              <th><%= hospital.genre.name %></th>
              <th>
                <% if hospital.is_active == true %>
                  <p class="text-success font-weight-bold">対応中</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">対応停止中</p>
                <% end %>
              </th>
              <th>
                <%= link_to '削除する' , admin_hospital_path(hospital.id), method: :delete, "data-confirm"=> "本当に削除しますか？", class: "btn btn-danger" %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="pagination justify-content-center">
      <%= paginate @hospitals %>
    </div>
  </div>
</div>