<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>医療提供者情報編集</h2>
      <%= form_with model: @doctor, url: doctors_update_path, method: :PATCH do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :"氏名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit :"編集内容を保存",class:"btn btn-success"%></td>
              <td><%= link_to "退会する", doctors_unsubscribe_path(@doctor), class:"btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>