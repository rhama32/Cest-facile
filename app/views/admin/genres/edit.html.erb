<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h4 class="mt-3 text-center"><b>ジャンル編集</b></h4>
    </div>
  </div>
  <div class="col-xs-10">
    <%= form_with model:@genre, url: admin_genre_path(@genre.id) do |f| %>
      <table class="table">
        <td class="col-6 font-weight-bold text-center">
          <%= f.label :name, "ジャンル名" %>
        </td>
        <td class="col-4">
          <%= f.text_field :name %>
        </td>
      </table>
      <div class="mt-3 text-center">
        <%= f.submit '変更を保存' , class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>