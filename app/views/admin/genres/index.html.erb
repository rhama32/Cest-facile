<div class="container">
  <div class="row-lg-11">
    <div class="col-3">
      <h4 class="bg-light text-center">ジャンル一覧</h4>
    </div>
      <table class="table">
        <thead>
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <td class="col-2"><%= f.label :name, "ジャンル名"  %></td>
            <td class="col-2"><%= f.text_field :name %></td>
            <td class="col-4"><%= f.submit '新規登録', class: "btn btn-primary"%></td>
          <% end %>
              <tr class="table-secondary">
                <th>ジャンル</th>
              </tr>
        </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr class="border-bottom">
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-warning" %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>