<div class="container">
  <div class="row py-2">
    <div class="col-10">
      <h2>病院ジャンル一覧</h2>
    </div>
  </div>
  <div class="row py-4">
    <div class="col-8">
     <table>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
     <td class="col-2"><%= f.label :name, "ジャンル名"  %></td>
     <td class="col-2"><%= f.text_field :name %></td>
     <td class="col-4"><%= f.submit '新規登録', class: "btn btn-success"%></td>
      <% end %>
     </table>
     </div>
   </div>

   <div class="row">
     <div class="col-6">
      <table class='table'>
       <thead>
        <tr class="table-secondary">
         <th>ジャンル</th>
         <th></th>
        </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
        <tr class="border-bottom">
         <td><%= genre.name %></td>
         <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success"%></td>
        </tr>
       <% end %>
       </tbody>
      </table>
     </div>
   </div>