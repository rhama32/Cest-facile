<div class="row">
  <div class="col-sm-12">
    <h4 class="mt-3 text-center"><b>ジャンル一覧</b></h4>
  </div>
  <table class="table">
    <thead>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <td class="col-2"><%= f.label :name, "ジャンル名"  %></td>
        <td class="col-2"><%= f.text_field :name %></td>
        <td class="col-4"><%= f.submit '新規登録', class: "btn btn-primary"%></td>
      <% end %>
        <tr class="table-secondary">
          <th>ジャンル</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr class="border-bottom">
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-warning" %></td>
          <td><%= link_to '削除', admin_genre_path(genre), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>