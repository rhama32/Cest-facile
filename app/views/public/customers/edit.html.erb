<div class="container">
  <div class="row">
    <div class="col-10">
      <h4>会員情報編集</h4>
      <%= form_with model: @customer, url: customers_update_path, method: :PATCH do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :"氏名" %></td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><%= f.label :"フリガナ" %></td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label :"郵便番号" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :"住所" %></td>
              <td><%= f.text_field :address, size:"50" %></td>
            </tr>
            <tr>
              <td><%= f.label :"電話番号" %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.text_field :email,size:"50" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit :"編集内容を保存",class:"btn btn-success"%></td>
              <td><%= link_to "退会する", customers_unsubscribe_path(@customer), class:"btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <% if @customer.last_name != "guestuser" %>
      <div class='row'>
      <%= link_to 'ゲストユーザー', customers_edit_path(@customer),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@customer.id}" %>
      </div>
      <% end %>
    </div>
  </div>
</div>