<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h4 class="mt-3 text-center"><b><%= @customer.full_name %>さんの会員情報編集</b></h4>
    </div>
    <%= form_with model: @customer, url: customers_update_path, method: :PATCH, class: "form-horizontal" do |f| %>
      <div class="form-group">
        <%= f.label:"氏名", class: "col-sm-6 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      </div>

      <div class="form-group">
        <%= f.label:"フリガナ", class: "col-sm-2 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name_kana, class: "form-control" %>
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      </div>

      <div class="form-group">
        <%= f.label:"郵便番号", class: "col-sm-2 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
      </div>

      <div class="form-group">
        <%= f.label:"住所", class: "col-sm-2 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control", size:'50' %>
      </div>
      </div>
      
      <div class="form-group">
        <%= f.label:"電話番号", class: "col-sm-2 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :telephone_number, class: "form-control", size:'50' %>
      </div>
      </div>
      
      <div class="form-group">
        <%= f.label:"メールアドレス", class: "col-sm-2 control-label", for: "InputEmail" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", size:'50' %>
      </div>
      </div>
        
    
      <div class="d-grid gap-2 col-2 mx-auto text-nowrap">
        <i class="fa-solid fa-book">
      <button type="submit" class="mt-1 btn btn-success">編集を保存</button>
        </i>
        <i class="fa-solid fa-user-xmark">
          <%= link_to "退会する", customers_unsubscribe_path(@customer), class:"mt-3 btn btn-danger" %>
        </i>
      </div>
   
    <% end %>
  </div>
</div>