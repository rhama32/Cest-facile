<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h3 class="mt-3 text-center"><b><%= @customer.full_name %>さんのマイページ</b></h3>
      <h4 class="text-center">登録情報</h4>
    </div>

    <div class="mt-3 text-center">
      <% unless @customer.email == "guest@example.com"%>
      <i class="fa-solid fa-book"></i>
        <%= link_to "編集する", customers_edit_path, class:"btn btn-success btn-lg rounded-pill" %>
      
      <% end %>
    </div>

    <div class="col-md-8">
      <table class="mt-4 table table-hover shadow">
        <tbody>
          <tr>
            <td>氏名</td>
            <th><%= @customer.last_name %><%= @customer.first_name %></th>
          </tr>
          <tr>
            <td>カナ</td>
            <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
            </tr>
          <tr>
            <td>郵便番号</td>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <td>住所</td>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <td>電話番号</td>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <th><%= @customer.email %></th>
          </tr>
        </tbody>
      </table>
      <div class ="d-flex justify-content-between">
        <i class="fa-solid fa-magnifying-glass">
          <%= link_to '過去のレビュー', public_reviews_path, class: "mt-2 btn btn-primary me-4" %>
        </i>
        <i class="fa-solid fa-users">
          <%= link_to 'フォロー一覧', public_follows_path, class: "mt-2 btn btn-primary me-4" %>
        </i>
        <i class="fa-solid fa-book">
          <%= link_to '予約一覧', public_reservations_path, class: "mt-2 btn btn-primary me-4" %>
        </i>
      </div>
    </div>
  </div>
</div>