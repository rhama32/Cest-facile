<div class="container">
     <%= render 'search', searches: @searches %>
     <!--ジャンル検索-->
     <%= render 'genrevar', genres: @genres %>

    <div class="col-10">
      <!--一覧部分-->
      <h4 style="margin: 0;">病院一覧(全<%= @count %>件)</h4>
      <div class="row">
        <% @hospitals.each do |hospital| %>
          <% if hospital.is_active == true %>
            <div class="col-md-4 shadow p-6 mb-3">
                診療科目：<%= hospital.subject %><br>
                住所：<%= hospital.address %><br>
                

                
                
                
              <%= link_to public_hospital_path(hospital) do %>
                <%= image_tag hospital.image, size:"100x100"  %>
                <%= hospital.name %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <%= paginate @hospitals %>
      </div>
    </div>
