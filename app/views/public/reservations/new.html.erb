<h4>ネットde診療予約</h4>
<div class="row-lg-10">
<%= form_with model: @reservation, url: public_reservations_path, method: :post do |f| %>
<table class="table table-bordered table-hover">
  <thead>
   <tr class="table-secondary">
      <th>予約希望日</th>
      <th>予約希望時間</th>
      <th>予約希望院</th>
      <th>実行ボタン</th>
  </thead>
  <tbody>
       <th><%= f.date_field :hope_day %></th>
       <th><%= f.time_select :hope_time, {:start_time => '08', :end_time => '20', :minute_step => 30} %></th>
       <th>
           <%= @hospital.name %>
           <%= f.select :hospital_id, Hospital.pluck(:name,:id),{:prompt => "希望院選択"}, :required => true %>
       </th>
      <th><%= f.submit "予約する", class:"btn btn-success" %></th>
   </tbody> 
 </table>
  <% end %>
</div>