<% if @review.favorited_by?(current_customer) %>
  <%= link_to public_review_favorites_path(@review.id), method: :delete, remote: true do %>
    ♥<%= @review.favorites.count %> いいね
  <% end %>
  <% else %>
    <%= link_to public_review_favorites_path(@review.id), method: :post, remote: true do %>
    ♡<%= @review.favorites.count %> いいね
  <% end %>
<% end %>