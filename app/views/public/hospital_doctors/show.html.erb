<div class="container">
  <div class="row">
  <div class="offset-0 col-md-8 offset-md-2">
    <h4 class="text-center"><b><%=@customer.full_name %>さんがフォロー中<br></b></h4>
    <h5 class="mt-2 text-center"><%= @hospital_doctor.name %>さんの医療者情報詳細</h5>
      <table class="table">
        <tbody>
          <tr>
            <th>医療者ID</th>
            <th><%= @hospital_doctor.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @hospital_doctor.name %></th>
          </tr>
          <tr>
            <th>所属院</th>
            <th><%= @hospital_doctor.hospital.name %></th>
          </tr>
          <tr>
            <th>診療科目</th>
            <th><%= @hospital_doctor.hospital.subject %></th>
          </tr>
        </tbody>
      </table>
      <div class="d-grid gap-2 col-6 mx-auto">
        <%= link_to '医師一覧に戻る', public_hospital_hospital_doctors_path, class: "mt-4 btn btn-success" %>
        <%= link_to '病院一覧に戻る', public_hospitals_path, class: "mt-4 btn btn-warning" %>
      </div>
    </div>
  </div>
</div>