<div class="container">
  <div class="row">
  <div class="offset-0 col-md-8 offset-md-2">
    <h3 class="mt-3 text-center"><b><%= @customer.full_name %>さんのフォロー</b></h3>
    <h3 class="mt-2 text-center"><b>(全<%= @doctors.count %>人)</b></h3>
  </div>
    
      <div class="offset-0 col-md-8 offset-md-2 text-center">
      <thead>
        <% doctors.each do |doctor| %>
            <tr>
            <th><%= doctor.id %></th>
            <th><%= doctor.name %></th>
            <th>
                <% if current_customer.following?(doctor) %>
                  <%= link_to "フォローを外す", public_follows_path(doctor_id: doctor.id), method: :delete, class:"btn btn-danger center-block" %>
                <% else %>
                  <%= link_to "フォローする", public_follows_path(doctor_id: doctor.id), method: :post, class:"btn btn-success center-block" %>
                <% end %>
            </th>
            <th>
                <% if doctor.hospital_id.nil? %>
                  <%= link_to "病院一覧", public_hospitals_path, class:"btn btn-success center-block" %>
                <% else %>
                  <%= link_to "医師詳細に進む", public_hospital_hospital_doctor_path(doctor.hospital,doctor), class:"btn btn-warning center-block" %>
                <% end %>
            </th>
          </tr>
        <% end %>
        </thead>
        </div>
        </div>
      </div>
        <!--ジャンル検索-->
          <%#= render 'genrevar', genres: @genres %>
        <!--病院一覧から探す-->
          <%#= render 'hospital/index', hospitals: @hospitals %>