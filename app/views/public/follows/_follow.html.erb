<div class="container">
  <div class="row">
    <h3 class="mt-3 text-center"><b><%= @customer.full_name %>さんのフォロー</b></h3>
    <h3 class="mt-2 text-center"><b>(全<%= @doctors.count %>人)</b></h3>
    
      <div class="mt-2 col-md-8 offset-2">
        <% doctors.each do |doctor| %>
          <tr class="text-nowrap">
            <th><%= doctor.id %></th>
            <th><%= doctor.name %></th>
            <th>
                <% if current_customer.following?(doctor) %>
                  <%= link_to "フォローを外す", public_follows_path(doctor_id: doctor.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", public_follows_path(doctor_id: doctor.id), method: :post %>
                <% end %>
            </th>
            <th>
                <% if doctor.hospital_id.nil? %>
                  <%= link_to "病院一覧", public_hospitals_path %>
                <% else %>
                  <%= link_to "医師詳細に進む", public_hospital_hospital_doctor_path(doctor.hospital,doctor) %>
                <% end %>
            </th>
          </tr>
        <% end %>
        <!--ジャンル検索-->
          <%#= render 'genrevar', genres: @genres %>
        <!--病院一覧から探す-->
          <%#= render 'hospital/index', hospitals: @hospitals %>