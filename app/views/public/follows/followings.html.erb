<div class="container">

  <div class="row-lg-10">
  <table class="table">
    <thead>
      <tr class="table-secondary">
         <th>医療者ID</th>
         <th>フォロー中の医療者</th>
      </tr>
    </thead>
    <tbody>
      <h4><%= @customer.full_name %>さんのフォロー一覧(全<%= @doctors.count %>人)</h4>
            <% @doctors.each do |doctor| %>
        <tr>
          <th><%#= @doctors.id %></th>
          <th><%#= @doctors.name %>
              <%#= link_to "医師詳細に進む", public_hospital_doctor_path(doctor) %>
          </th>
              <% end %>
        </tr>
      </div>
    </tbody>
  </table>
