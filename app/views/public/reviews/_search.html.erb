<% if customer_signed_in? %>
<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="mt-2 search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, :placeholder => "右側の項目を選択", size: "25"%>
      <%= f.select :range, options_for_select([['レビュー','Review'], ['会員', 'Customer']]) %>
      <%= f.select :search, options_for_select([["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
  </div>
<% end %>
</div>