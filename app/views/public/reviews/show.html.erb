<h2>レビュー投稿履歴詳細画面</h2>
<%#= @hospital.name %>
<!--○月○日に来院などを追加したい。 -->
 <div class="row-lg-10">
  <table class="table">
   <thead>
    <tr class="table-secondary">
      <th>病院・クリニック名</th>
      <th>レビュー投稿日</th>
      <th>診療の満足度</th>
      <th>院内の清潔さ</th>
      <th>スタッフの対応満足度</th>
      <th>待ち時間</th>
      <th>コメント</th>
      <th>総合満足度</th>
    </tr>
   </thead>

   <tbody>
     <td><%= @hospitals.name %></td>
     <td><%= @reviews.created_at %></td>
     <td><%= @reviews.doctor_satisfaction %></td>
     <td><%= @reviews.room_clean %></td>
     <td><%= @reviews.staff_satisfaction %></td>
     <td><%= @reviews.waiting_time %></td>

     <% if @reviews.favorited_by?(current_customer) %>
       <p>
         <%= link_to public_review_favorites_path(@reviews.id), method: :delete do %>
           ♥<%= @reviews.favorites.count %> いいね
         <% end %>
       </p>
     <% else %>
       <p>
         <%= link_to public_review_favorites_path(@reviews.id), method: :post do %>
           ♡<%= @reviews.favorites.count %> いいね
         <% end %>
       </p>
      <% end %>
     <td><%= @reviews.total_point %></td>
   </tbody>
  </table>
  <p><%= @reviews.comment %></p>
  <p><%= @reviews.created_at %></p>
  <p><%= @reply.comment if @reply %></p>
  <p><%= @reply.created_at if @reply %></p>

 </div>