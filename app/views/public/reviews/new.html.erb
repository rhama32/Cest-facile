
<h2>レビュー情報入力画面</h2>
<%= form_with model: @review, url: public_reviews_path do |f| %>
  <%= f.hidden_field :hospital_id %>
  <table class="table">
    <tbody>
      <tr></tr>
      <th class="star-form-group" id="star1">
       <div class="detail-review">診療の満足度</div>
       <div class="detail-value", id="star-comf-<%= @review.id %>"></div>
       <div class="eval-star"><%= @review.doctor_satisfaction %>/5点</div>
        <%= f.label :doctor_satisfaction, class:'star-title' %>

        <script>
         $('#star1').raty({
         size     : 38,                                    //星のサイズ
         starOff:  '<%= asset_path('star-off.png') %>',    //imagesフォルダより星画像の呼び出し
         starOn : '<%= asset_path('star-on.png') %>',
         starHalf: '<%= asset_path('star-half.png') %>',
         scoreName: 'review[comfort]',     //reviewモデルのcomfortカラムに保存
         half: true,                       //星半分を許可する。DBには0.5単位の数値が保存される
         readOnly: true,                             //readOnlyオプションで読み込み専用とする。編集できない。
         score: <%= @review.doctor_satisfaction %>,
         });
        </script>

        <%#= @review.doctor_satisfaction %>
        <%#= f.select :doctor_satisfaction, (1..5) %>
      </th>
      <th>
       院内の清潔さ
         <%= @review.room_clean %>
         <%= f.select :room_clean, (1..5) %>
      </th>
      <th>
        スタッフの対応満足度
         <%= @review.staff_satisfaction %>
         <%= f.select :staff_satisfaction, (1..5) %>
         <!-- nameからidとして引き渡す。-->
         <%#= f.select :hospital_id, Hospital.pluck(:name,:id),{:prompt => "希望院選択"}, :required => true %>
      </th>
      <th>
        待ち時間(10分単位)
         <%= @review.waiting_time %>
         <%= f.select :waiting_time, [10,20,30,40,50,60] %>分
      </th>
      <th>
        コメント
         <%= @review.comment %>
         <%= f.text_field :comment %>
      </th>
      <th>
        総合満足度
         <%= @review.total_point %>
         <%= f.select :total_point, (1..5) %>
      </th>
      <th>
         <%= f.submit "投稿する", class:"btn btn-success" %>
      </th>
    </tbody>
  </table>
<% end %>